
<div class = "justify-content-around row align-items-end">

	<p><%= link_to 'New Photo', new_post_path %></p>
	<h1><a href = <%=root_path %>>Vibeygrammmm</a></h1>
	<p><%= link_to 'New Video', new_video_path %></p>
	<p><%= link_to 'New Text', new_text_path %></p>
</div>

<div class = "container justify-content-center my-5">

	<div class = "row justify-content-center">
		<div class = "column">
			<iframe width="420" height="315" class="embed-responsive-item" src=<%= @video.video_url %> frameborder=0 allowfullscreen=""></iframe>
		</div>
		<div class = "column ml-5">
			<h2 class = "text-capitalize"><%= @video.title %></h2>
			<p class = "text-capitalize font-italic"><%= @video.author_name %></p>
			<p class = "my-5 pb-5"><%= @video.caption %></p>
			<small><%= @video.updated_at%></small>
			<p><%= link_to 'Edit Video Post', edit_video_path(@video) %></p>
		</div>

	</div>

</div>