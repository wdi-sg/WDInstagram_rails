<h1>New Image / Random Gif Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>

  <p>
    <%= form.label :author_name %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :photo_url %><br>
    <%= form.text_area :photo_url, size: "60x12", value:@image_url %>
  </p>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, value:@title  %>
  </p>

  <p>
    <%= form.label :caption %><br>
    <%= form.text_area :caption, size: "60x12" %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<h2><%= link_to 'BACK TO MAIN', root_path %></h2>
