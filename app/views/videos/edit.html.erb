
<div class = "justify-content-around row align-items-end">

	<p><%= link_to 'New Photo', new_post_path %></p>
	<h1><a href = <%=root_path %>>Vibeygrammmm</a></h1>
	<p><%= link_to 'New Video', new_video_path %></p>
	<p><%= link_to 'New Text', new_text_path %></p>
</div>

 <div class = "row justify-content-center text-center my-5">
	<div class = "column">
		<iframe width="420" height="315" class="embed-responsive-item" src=<%= @video.video_url %> frameborder=0 allowfullscreen=""></iframe>
  <div class = "column ml-5">

<%= form_with scope: :video, model: @video, local: true do |form| %>

	<p>
	<%= form.label :Author%><br>
	<%= form.text_field :author_name %>
  </p>

  <p>
	<%= form.label :title %><br>
	<%= form.text_field :title %>
  </p>

  <p>
	<%= form.label :caption %><br>
	<%= form.text_area :caption %>
  </p>

  <p>
	<%= form.label :'video Link' %><br>
	<%= form.text_area :video_url %>
  </p>


  <p>
	<button type = "submit" class="btn btn-primary" >Update</button>
  </p>

<% end %>
<p><%= link_to 'Delete Post', video_path(@video),
		method: :delete,
		data: { confirm: 'Are you sure?' } %></p>
   </div>

</div>