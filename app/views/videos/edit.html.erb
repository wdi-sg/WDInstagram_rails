<h1>Edit Youtube video post</h1>

<%= form_with scope: :video, model: @video, local: true do |form| %>

  <p>
    <%= form.label :author_name, 'Author Name' %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :video_url, 'Video Url' %><br>
    <%= form.text_field :video_url %>
  </p>

  <p>
    <%= form.label :title, 'Title' %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :caption, 'Caption' %><br>
    <%= form.text_field :caption %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>


<%= link_to 'Back', root_path, class: 'btn btn-primary' %>