<h1>WDInstagram</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th></th>
  </tr>

  <%= link_to 'New', new_post_path %>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.author_name %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>