<h1>Edit Profile</h1>

<%= form_with scope: :profile, model: @profile, local: true do |form| %>

   <p>
    <%= form.label :author_name %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :photo_url %><br>
    <%= form.text_area :photo_url %>
  </p>

    <p>
    <%= form.label :caption %><br>
    <%= form.text_area :caption %>
  </p>

   <p>
    <%= form.label :title %><br>
    <%= form.text_area :title %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>