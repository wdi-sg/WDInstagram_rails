<h1>Edit post</h1>

<%= form_with scope: :article, model: @article, local: true do |form| %>

	<p>
		<%= form.label :author %><br>
		<%= form.text_field :author %>
	</p>

	<p>
		<%= form.label :photo_url %><br>
		<%= form.text_field :photo_url %>
	</p>

	<p>
		<%= form.label :caption %><br>
		<%= form.text_field :caption %>
	</p>

	<p>
		<%= form.label :date_taken %><br>
		<%= form.date_field :date_taken %>
	</p>

	<p>
		<%= form.submit %>
	</p>

<% end %>

<%= link_to 'Back', articles_path %>


