<h1>Edit post</h1>

<%= form_with scope: :post, model: @post, local: true do |form| %>

 <p>
    <%= form.label :title, "Title" %><br/>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :author_name, "Author's name" %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :photo_url, "Photo URL" %><br/>
    <%= form.text_area :photo_url %>
  </p>

  <p>
    <%= form.submit ({class: "btn btn-primary"}) %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>