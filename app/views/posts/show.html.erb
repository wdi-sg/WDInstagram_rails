
<div class="container single-container">
	<div class="row">
		<div class="col-md">
			<p class="title">
				<strong><%= @post.title %></strong>
			</p>
		</div>
	</div>
	<div class="row">
		<div class="col-md single-img-div">
			<img src="<%= @post.photo_url %>" class="single-img" ></img>
		</div>
	</div>
	<div class="row">
		<div class="col-md">
			<p class="single-caption">
				<%= @post.caption %>
			</p>
			<%= link_to 'edit', edit_post_path(@post), class:"btn btn-secondary" %>
			<%= link_to 'delete', post_path(@post), data: {:confirm => "Are you sure?"}, :method => :delete, class:"btn btn-danger" %>
		</div>
	</div>
</div>