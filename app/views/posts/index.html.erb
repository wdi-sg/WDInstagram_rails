



<% @posts.each do |element| %>

<div class="flex-container">

<div class="flex-row">

<div class="d-flex flex-column">
	<h3><%= element.title %></h3>
<figure>
<%= image_tag element.url, :height => '200px', :width => '200px' %>
<figcaption><%= element.description %></figcaption>
</figure>
</div>
</div>

<div class="flex-row">
	<% element.hashtags.each do |hs| %>

	<div class="d-flex flex-column"><h3><%= hs.name %> </h3></div>
	<% end %>

<div class="d-flex flex-column">
<p><%= element.created_at %></p>
</div>
<div>
<%= link_to "Select post", post_path(element), :class => 'btn btn-default' %>
</div>
</div>
</div>


<% end %>

