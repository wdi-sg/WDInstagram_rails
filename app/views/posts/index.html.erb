<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Caption</th>
    <th>Photo</th>
    <th>Author</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.caption %></td>
      <td><img src="<%= post.photo_url %>" width="180px" height="180px"></td>
      <td><%= post.author_id %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path %>