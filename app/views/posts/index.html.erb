<div class = "container">

    <div class="row">
        <h1 class="headings"> WDInstagram </h1>
    </div>

    <div class="row">
        <span class="links"><%= link_to 'My Posts', controller: 'posts' %></span> &nbsp;&nbsp;
        <span class="links"><%= link_to 'New Post', new_post_path %></span>&nbsp;&nbsp;
        <span class='links'><%= link_to 'New Hashtag', new_hashtag_path %></span>&nbsp;&nbsp;
        <span class='links'><%= link_to 'All Hashtags', hashtags_path %></span>
    </div>

    <div class="row">
        <% @posts.each do |post| %>
        <div class="card col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <br/>
            <img class ="card-img-top" src=<%= post.photo_url %> width="362" height="200" alt="Card image cap"/>
            <div class="card-body">
                <h5 class="card-title"><%= post.author %></h5>
                <p class="card-text">Date taken: <%= post.date_taken %></p>
                <p class='card-text'>Comments: <%= post.comments.size %></p>

									<h3>Comments</h3>
									<% post.comments.each do |comment| %>
										<div class="card card-body bg-light">
											<p><strong><%= comment.username %></strong>: <%= comment.body %>
											<%= link_to '[X]', post_comment_path(post, comment),
																		method: :delete,
																		data: { confirm: 'Are you sure?' } %></p>
										</div>
									<% end %>


                <p class="card-text inline"><%= link_to 'Show', post_path(post) %></p>
                <p class="card-text inline"><%= link_to 'Edit', edit_post_path(post) %></p>
                <p class="card-text inline"><%= link_to 'Destroy', post_path(post),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></p>
            </div>
        </div>
        <% end %>
    </div>

</div>