<h1>Edit instagram</h1>

<%= form_with scope: :instagram, model: @banana, url: '/instagrams/'+@banana.id.to_s, local: true do |form| %>

	<p>
	  <%= form.label :author_name %><br>
	  <%= form.text_field :author_name %>
	</p>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :photo_url %><br>
    <%= form.text_field :photo_url %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>