<div class="container">

<h1>Edit comment</h1>

<%= form_with scope: :comment, model: @comment, local: true do |form| %>

	<p>
		<%= form.label :name %><br>
		<%= form.text_field :name %>
	</p>

	<p>
		<%= form.label :text %><br>
		<%= form.text_area :text %></p>
	</p>
		<%= form.hidden_field :post_id, value: :id %>
	<p>
		<%= form.submit %>
	</p>

<% end %>

<%= link_to 'Back', post_path(@post) %> |
<%= link_to 'Log Out', destroy_user_session_url, method: :delete %>

</div>