<div class ='container'>
	<h1>All Posts</h1>

  	<% @posts.each do |post| %>
    	<h4> <%= post.title %></h4>
     
   	  <p><%= post.author_name %></p>
   	  <p><%= image_tag(post.photo_url, size:"386x259") %></p>
   	  <p><%= post.caption %></p>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Delete', post_path(post),
								        method: :delete,
								        data: { confirm: 'Are you sure?' },
								        :class => 'btn btn-default' %>
    
  	<% end %>
</div>