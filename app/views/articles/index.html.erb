<h1>Instagram Feed</h1>

<table>
	<tr>
		<th>Author</th>
		<th>Photo</th>
		<th>Caption</th>
		<th>Date Taken</th>
	</tr>


	<% @articles.each do |article| %>
		<tr>
			<td><%= article.author %></td>
			<td><%= image_tag(article.photo_url, size: '150') %></td>
			<td><%= article.caption %></td>
			<td><%= article.date_taken %></td>
			<td><%= link_to 'Show', article_path(article) %></td>
			<td><%= link_to 'Edit', edit_article_path(article) %></td>
			<td><%= link_to 'Delete', article_path(article),
        method: :delete,
        data: { confirm: 'Yo, you sure you want to delete this post?' } %></td>
		</tr>
	<% end %>
</table>


<%= link_to 'New post', new_article_path %>
<%= link_to 'Logout', destroy_user_session_url, method: :delete %>

