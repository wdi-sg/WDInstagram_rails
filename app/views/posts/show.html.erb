<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<div>Date: <%= @post.updated_at %></div>

<div>
  <%= image_tag(@post.photo_url, :alt => "photo!", height: 500, width: 500) %>
</div>

<p>
  <%= @post.caption %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.author_name %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %>

<%= link_to 'Back', root_path %>
