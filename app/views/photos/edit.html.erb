<h1>Edit Photo Post</h1>

<%= form_with scope: :photo, model: @photo, local: true do |form| %>

  <p>
    <%= form.label :author_name %><br>
    <%= form.text_field :author_name%>
  </p>

  <p>
    <%= form.label :photos_url %><br>
    <%= form.text_area :photos_url%>
  </p>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title%>
  </p>

  <p>
    <%= form.label :caption %><br>
    <%= form.text_area :caption,%>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<h3><%= link_to 'BACK TO MAIN PAGE', root_path %></h3>