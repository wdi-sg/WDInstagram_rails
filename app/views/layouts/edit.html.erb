<%= form_with scope: :post, model: @post, html: {class:"form"}, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= label_tag(:photo_url, "Author Name") %><br>
    <%= form.text_area :author_name %>
  </p>
    <p>
    <%= label_tag(:photo_url, "Your Image URL") %><br>
    <%= form.text_area :photo_url %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
<%= link_to 'Back to Post', post_path(@post), :class => "btn btn-blue mb-2"%>

