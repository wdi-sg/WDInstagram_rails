<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :photo_url %><br>
    <%= form.text_area :photo_url %>
  </p>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

    <p>
    <%= form.label :caption %><br>
    <%= form.text_area :caption %>
  </p>

  <p>
    <%= form.submit "Post", :class => "btn" %>
  </p>

<% end %>

  <%= link_to 'Back', root_path %>