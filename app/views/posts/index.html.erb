<h1>All Entries</h1>

<table>
  <tr>
    <th>Author</th>
    <th>Photo</th>
    <th>Caption</th>
    <th>Title</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.author %></td>
      <td><img src= "<%= post.photo %>" height = "500px" width = "500px" /></td>
      <td><%= post.caption %></td>
      <td><%= post.title %></td>

      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
    <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>

<%= link_to 'New Post', new_post_path %>
