<h1>All Posts</h1>
<h2>asdsd</h2>
<table>
  <tr>
    <th>Author</th>
    <th>Photo</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.author %></td>
      <td><%= image_tag(post.photo_url) %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= button_to 'Destroy', post,
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New Post', new_post_path %>