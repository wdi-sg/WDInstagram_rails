<%= link_to "New post", new_post_path %>

<h1>Listing Posts</h1>


<table width="100%" cellspacing="0" cellpadding="5" style="border: 1px solid pink">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Photo URL</th>
    <th>Caption</th>
    <th>Last Updated</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.author_name %></td>
      <td><%= post.photo_url %></td>
      <td><%= post.caption %></td>
      <td><%= post.updated_at.to_formatted_s(:long_ordinal) %></td>
      <td><%= link_to "Show", post_path(post) %></td>
      <td> | <%= link_to "Edit", edit_post_path(post) %> | </td>
      <td><%= link_to "Destroy", post_path(post),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %></td>
    </tr>
  <% end %>
</table>