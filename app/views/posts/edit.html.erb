<h1>Edit post</h1>

<%= form_with scope: :post, model: @post, local: true do |form| %>

	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :author_name %><br>
		<%= form.text_area :author_name %>
	</p>

	<p>
		<%= form.label :photo_url %><br>
		<%= form.text_area :photo_url %>
	</p>

	<p>
		<%= form.label :comment %><br>
		<%= form.text_area :comment %>
	</p>

	<p>
		<%= form.submit %>
	</p>

<% end %>

<%= link_to 'Back', root_path %>