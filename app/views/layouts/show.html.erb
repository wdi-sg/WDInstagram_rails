<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<div class="jumbotron">
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
<strong>By:</strong>
<%= @post.author_name %>
</p>

<p>
<%= image_tag(@post.photo_url) %>
</p>

<p>
<%= @post.created_at.to_time.strftime('Posted %m/%d/%y') %>
</p>
<%= link_to 'Edit Post', edit_post_path(@post), :class => "btn btn-warning mb-2"%>
<br/><%= link_to 'Back to Home', root_path, :class => "btn btn-primary" %>

</div>