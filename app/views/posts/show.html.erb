<h1> Post #<%= @post.id %></h1>

<div>
	<p><img src = <%= @post.photo_url %> /></p>

	<p>
 		<strong>Title:</strong>
  		<%= @post.title %>
	</p>

	<p>
	 	<strong>Caption:</strong>
	 	<%= @post.caption %>
	</p>

	<p>
	 	<strong>Author:</strong>
	 	<%= @post.author_name %>
	</p>

</div>



<%= link_to 'Edit', edit_post_path(@post) %>


