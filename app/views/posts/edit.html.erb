<h1>Edit Post</h1>

<%= form_with scope: :article, model: @post, local: true do |form| %>

  <p>
    <label>Author Name</label><br>
    <%= form.text_field :author_name, :value => @post.author_name  %>
  </p>

  <p>
    <label>Photo URL</label><br>
    <%= form.text_field :photo_url, :value => @post.photo_url %>
  </p>

  <p>
	<%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>