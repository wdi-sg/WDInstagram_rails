<html>
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <style>
      body {
       font-family: 'Open Sans', sans-serif;
      }
    </style>
  </head>
  <body>
    <%= link_to 'New Post', new_post_path %>
    <h1>All Posts</h1>
    <% @posts.each do |post| %>
      <div>
        <h3>Title: <%= post.title %></h3>
      <ul>
        <li><b>Author: </b><%= post.author_name %></li>
        <li><b>Content:</b><br/>
          <img src=<%= post.post_content%> alt="image" height="150px" width="150px"/></li>
        <li><b>Caption: </b><%= post.caption %></li>
        <li><b>Created At: </b><%= post.created_at.getlocal.strftime("%d %B %Y, %H:%M")  %></li>
        <li><b>Updated At: </b><%= post.updated_at.getlocal.strftime("%d %B %Y, %H:%M")  %></li>
        <li><%= link_to 'Show', post_path(post) %>&nbsp;
          <%= link_to 'Edit', edit_post_path(post) %>&nbsp;
          <%= link_to 'Destroy', post_path(post),
                method: :delete,
                data: { confirm: 'Are you sure?' } %>
        </li>
      </ul>
      </div>
    <% end %>
  </body>
</html>
