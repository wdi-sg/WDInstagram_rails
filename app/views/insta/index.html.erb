<h1 class="my-4">WDInsta Feed</h1>

<% @posts.each do |post| %>
<div class="card" style="width: 25rem;">
  <img class="card-img-top" src="#" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <p class="card-text"><%= post.caption %></p>
    <%= link_to 'Show', single_post_path(post), class: 'btn btn-primary mr-2' %>
    <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary mr-2' %>
    <%= link_to 'Delete', single_post_path(post), class: 'btn btn-primary mr-2', method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
  </div>
  <div class="card-footer">
  Posted on <%= post.created_at %>
  </div>
</div>
<% end %>