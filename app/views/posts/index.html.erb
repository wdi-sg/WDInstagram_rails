<h1>Listing Posts</h1>
<div class="container" style="margin: 20px auto;">
  Sort by date: 
  <form action='/' style="display: inline-block;">
    <input type="hidden" name="order" value="asc">
    <button class='bx bx-up-arrow-alt' type="submit"></button>
  </form>
  <form action='/' style="display: inline-block;">
  <input type="hidden" name="order" value="desc">
    <button class='bx bx-down-arrow-alt' type="submit"></button>
  </form>
</div>
  <div class="card-columns  d-inline-block">
    <% @posts.each do |post| %>
      <div class="card bg-light mb-3">
        <img src=<%= post.photo_url %> class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p><%= post.author_name %></p>
          <p><%= post.caption %></p>
          <p><%= link_to 'Read More', post_path(post) %><P>
          <p>
            <%= link_to '', edit_post_path(post), :class => "bx bxs-edit" %>
            <%= link_to '', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, :class => "bx bxs-trash" %>
          </p>
          <small class="text-muted">updated: <%= post.updated_at.to_s(:db) %></small>
        </div>
     </div>
    <% end %>
  </div>
</table>
