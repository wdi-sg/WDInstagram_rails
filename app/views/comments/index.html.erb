<h1>Comments for "<%= @article.title %>"</h1>

<ul>

<% @comments.each do |comment| %>
<li><%= comment.content %> &nbsp;&nbsp;&nbsp;at <%=comment.created_at %>&nbsp;&nbsp;&nbsp;<%= link_to 'Edit comment', edit_article_comment_path(@article, comment) %>&nbsp;&nbsp;&nbsp;<%= link_to 'Delete comment', article_comment_path(@article, comment),
				method: :delete,
        data: { confirm: 'Really Meh?' } %></li>
<% end %>

</ul>

<%= link_to 'Back', articles_path %>

