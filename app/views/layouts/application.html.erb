<!DOCTYPE html>
<html>
  <head>
    <title>WDInstagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
		<nav class="navbar navbar-light bg-light">
			<%= link_to 'WDInstagram', entries_path, class: 'navbar-brand'%>
			<div class="navbar nav">
				<%= link_to 'NEW', new_entry_path, class: 'nav-link' %>
				<%= link_to 'TAGS', tags_path, class: 'nav-link' %>
				<% if user_signed_in? %>
				<%= link_to 'log out', destroy_user_session_url, method: :delete %>
				<% else %>
				<%= link_to 'log in', new_user_session_url %>
				<% end %>
			</div>
		</nav>
		<div class="text-center font-weight-bold">
			<p class="notice"><%= notice %></p>
	    <p class="alert"><%= alert %></p>
		</div>
    <%= yield %>
  </body>
</html>
