<h1>Hello Instagrammers!</h1>

<h1>Listing posts</h1>

<table>
  <tr>
    <th>Author Name</th>
    <th>Photo</th>
    <th>Title</th>
    <th>Caption</th>
    <th>Date created on</th>
    <th>Date updated on</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.author_name %></td>
      <td><%= image_tag post.photo_url %></td>
      <td><%= post.title %></td>
      <td><%= post.caption %></td>
      <td><%= post.created_at.strftime("Posted on %m/%d/%Y at %I:%M%p") %></td>
      <td><%= post.updated_at.strftime("Posted on %m/%d/%Y at %I:%M%p") %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New post', new_post_path %>