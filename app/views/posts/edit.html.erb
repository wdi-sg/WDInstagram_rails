<h1>Edit post</h1>

<%= form_with scope: :post, model: @post, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :photo %><br>
    <%= form.text_area :photo_url %>
  </p>

    <p>
    <%= form.label :title %><br>
    <%= form.text_field  :title %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>
