


<div class="col-md-10 text-center">

	<div class="card rounded align-items-stretch">
		<div class="card-header"><h3 class="mb-0">ADD POST</h3></div>
		<div class="card-body">
			<div class="form-group">
				<p class="w-75 mx-auto">
					<%= form_tag new_gif_path, :method => 'get' do %>

					<%= text_field_tag :search, params[:search]  %>
					<%= submit_tag "Search", :name => nil %>

					<% end %>
				</p>




				<%= form_for :post, url: gifs_path do |f| %>
				<div class="container-fluid">
					<div class="row mx-auto d-flex">

						<div class="col-md-3 ">
							<%= f.radio_button :gif_url, "green" %>
							<img src="<%= @gifs[0]['images']['original']['url'] %>" class="w-100">
						</div>

						<div class="col-md-3">
							<%= f.radio_button :gif_url, "green" %>
							<img src="<%= @gifs[1]['images']['original']['url'] %>" class="w-100">
						</div>

						<div class="col-md-3">
							<%= f.radio_button :gif_url, "green" %>
							<img src="<%= @gifs[2]['images']['original']['url'] %>" class="w-100">
						</div>

						<div class="col-md-3">
							<%= f.radio_button :gif_url, "green" %>
							<img src="<%= @gifs[3]['images']['original']['url'] %>" class="w-100">
						</div>

					</div>
				</div>

				<p class="w-75 mx-auto">
					<%= f.label :title %>
					<%= f.text_field :title, class: 'form-control' %>
				</p>

				<p class="w-75 mx-auto">
					<%= f.label :author_name %>
					<%= f.text_field :author_name, class: 'form-control' %>
				</p>

				<p class="w-75 mx-auto">
					<%= f.label :caption %>
					<%= f.text_area :caption, class: 'form-control' %>
				</p>

				<p>
					<%= f.submit nil, class: 'btn btn-outline-success' %>
				</p>
				<% end %>


			</div>
		</div>
	</div>