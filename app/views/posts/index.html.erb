<h1>Listing posts</h1>
<h5><%= link_to 'Upload img', new_post_path %></h5>

<div class="pagewrapper">




	  <% @posts.each do |post| %>
	  	<div class="box">
		  	<img class="image" src=<%= post.photo_url %>>
			    <p>
			     <%= post.title %>
			     <%= post.caption %> <br>
			     ‚è± <%= post.created_at.in_time_zone('Singapore').strftime('%d %B %Y %I:%M %p') %>
			     <%= link_to 'Show', post_path(post) %>
			     <%= link_to 'Edit', edit_post_path(post) %>
			     <%= link_to 'Delete', post_path(post),
			        method: :delete,
			        data: { confirm: 'Are you sure you want to delete this masterpiece?' } %>
			    </p>
		  </div>



  <% end %>
  </div>