
<h1>Edit Post</h1>

<%= form_with scope: :post, model: @post, local: true do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :author_name %><br>
    <%= f.text_area :author_name %>
  </p>

  <p>
    <%= f.label :img_url %><br>
    <%= f.text_field :img_url %>
  </p>

  <p>
    <%= f.label :caption %><br>
    <%= f.text_field :caption%>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>