<h1> INSTARAILS </h1>

<% @posts.each do |post| %>
	<!-- 	<h5> <%= post.id %></h5> -->
		<div class="row">
		<div class="col-md-8">
		<img src="<%= post.photo_url %>"/>

		<%if post.video_url? %>
		<% post.video_url["https://www.youtube.com/watch?v="] = "https://www.youtube.com/embed/" %>
<!-- 			<h3> <%= post.video_url %></h3> -->
			<iframe width="600" height="315" src="<%= post.video_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
		<% end %>

		<%if post.tweet? %>
			<h1> <%= post.tweet %> </h1>
		<% end %>

		</div>
		<div class="col-md-4 align-self-center">
			<h1> <%= post.author_name %></h1>
			<h3> <%= post.title %></h3>
			<h5> <%= post.caption %></h5>
			<button type="button" class="btn btn-outline-primary btn-block"> <%= link_to 'Edit Post', "/posts/#{post.id}" %>  </button>
		</div>
	</div>
	<br>

<% end %>


