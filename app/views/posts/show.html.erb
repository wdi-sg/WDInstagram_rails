<h1>Showing post</h1>

<p><%= @post.title %></p>
<p><%= @post.author_name %></p>
<img src=<%= @post.photo_url %> alt=<%= @post.caption %>/>
<p><%= @post.caption %></p>

<%= link_to 'Back', posts_path %>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
