<h1>Edit picture</h1>

<%= form_with scope: :picture, model: @picture, local: true do |form| %>

    <p>
    <%= form.label :author_name %><br>
    <%= form.text_area :author_name %>
    </p>

    <p>
      <%= form.label :photo_url %><br>
      <%= form.text_field :photo_url %>
    </p>
  
    <p>
      <%= form.label :title %><br>
      <%= form.text_area :title %>
    </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>