<div class="container">
    <div class="row">
        <h1 class="headings">Edit Post</h1>
    </div>
    <div class="row">
        <%= form_with scope: :post, model: @post, local: true do |form| %>

        <div class="form-group">
            <%= form.label :author %><br>
            <%= form.text_field :author %>
        </div>

        <div class="form-group">
            <%= form.label :photo_url %><br>
            <%= form.text_area :photo_url %>
        </div>

        <div class="form-group">
            <%= form.label :date_taken %><br>
            <%= form.text_area :date_taken %>
        </div>

        <div class="form-group">
            <%= form.submit %>
        </div>

        <%= form.collection_check_boxes :tag_ids, @tags, :id, :tag %>
    
        <% end %>
        </div>
        <div class="row">
            <%= link_to 'Back', posts_path %>
        </div>
    </div>
</div>