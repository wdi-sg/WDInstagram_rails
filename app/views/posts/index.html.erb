<h1>All posts</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Author</th>
		<th>Link</th>
	</tr>


	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.author_name%></td>
			<td><%= link_to 'Show', post_path(post) %></td>
		</tr>

	<% end %>
</table>

<%= link_to 'New post', new_post_path %>