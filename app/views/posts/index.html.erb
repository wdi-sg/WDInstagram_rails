<h1>All Posts</h1>

<p><%= link_to 'new', new_post_path %></p>

<table>
    <tr>
        <th>Author</th>
        <th>Photo</th>
        <th>Title</th>
    </tr>

<% @posts.each do |post| %>
    <tr>
        <td><%= post.author_name%></td>
        <td><%= post.photo_url%></td>
        <td><%= post.title%></td>
        <td><%= link_to 'new', new_post_path %></td>
        <td><%= link_to 'edit', edit_post_path(post) %></td>
        <td><%= link_to 'delete', post_path(post), 
                method: :delete, data: {confirm: 'Are you sure?' } %></td>
    </tr>
<% end %>

</table>