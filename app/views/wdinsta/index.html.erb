<h1>WDInsta</h1>

<%= link_to 'New post', new_post_path %>
<%= link_to 'View oldest first', "#{root_path}?sort=date&order=asc" %>
<%= link_to 'View latest first', "#{root_path}?sort=date&order=desc" %>

<% @post.each do |post| %>
  
  <h5><%= post.author_name %></h5>
  <image src="<%= post.photo_url %>" width="250px" >
  <h5><%= post.title %></h5>
  <p><%= post.caption %></p>
  <p><%= post.created_at.localtime.strftime('%d %b %Y, %l:%M %p') %></p>

  <%= link_to 'Show', post_path(post) %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post_path(post),
    method: :delete,
    data: { confirm: 'Are you sure?' }
  %>
<% end %>