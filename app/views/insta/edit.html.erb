
<%= form_with scope: :insta, model: @insta, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, for: 'newtitle', value: 'Title' %>
    <%= form.text_field :title, id: 'newtitle', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :caption %>
    <%= form.text_area :caption, class: 'form-control' %>
  </div>

    <%= form.submit "Edit post", class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'Back', single_post_path, class: 'btn btn-primary' %>