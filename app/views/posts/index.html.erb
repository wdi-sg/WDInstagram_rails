<h1>All Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Photo</th>
    <th>Caption</th>
    <th>Text</th>
    
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.author_name %></td>
      <td><%= post.photo_url %></td>
      <td><%= post.caption %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Post', new_post_path %>
