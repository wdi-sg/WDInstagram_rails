<h1>Edit bideo</h1>

<%= form_with scope: :video, model: @video, local: true do |form| %>


  <p>
	<%= form.label :title %><br>
	<%= form.text_field :title %>
  </p>

  <p>
	<%= form.label :video_url %><br>
	<%= form.text_field :video_url %>
  </p>

	<p>
	<%= form.label :caption %><br>
	<%= form.text_field :caption %>
  </p>

	  <p>
	<%= form.label :author_name %><br>
	<%= form.text_field :author_name %>
  </p>



  <p>
	<%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>