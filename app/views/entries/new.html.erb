<div class="container-fluid">
  <div class="container mx-auto text-center">
    <h1>NEW</h1>
    <%= form_with scope: :entry, url: entries_path, local: true do |form|  %>
      <p>
        <%= form.label :photo_url %><br>
        <%= form.url_field :photo_url, value: @gif %>
      </p>
      <p>
        <%= form.label :author %><br>
        <%= form.text_field :author, value: current_user.email, readonly: true %>
      </p>
      <p>
        <%= form.label :caption %><br>
        <%= form.text_field :caption %>
      </p>
      <p>
        <%= form.submit %>
      </p>
    <% end %>
    <%= link_to 'Back', entries_path %>
  </div>
</div>
