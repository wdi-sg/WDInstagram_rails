<h1>Edit photo</h1>

<%= form_with scope: :photo, model: @photo, local: true do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :photo_url %><br>
    <%= f.text_area :photo_url %>
  </p>

  <p>
    <%= f.label :author_name %><br>
    <%= f.text_area :author_name %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Homepage', root_path %>

