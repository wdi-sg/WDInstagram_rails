<h1>Welcome to WDInstagram!</h1>

<h3>Here's your feed:</h3>

<%= link_to 'New post', new_post_path %>

<table>
  <tr>
    <th>Username</th>
    <th>Caption</th>
    <th>Photo</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.username %></td>
      <td><%= post.title %></td>
      <td>
        <img src= <%= post.photo_url %> /></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>