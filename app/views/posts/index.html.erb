<%= link_to 'New post', new_post_path %>

<h1>Listing posts</h1>

<table>
  <tr>
    <th>author_name</th>
    <th>photo_url</th>
    <th>titles</th>
    <th>caption</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.author_name %></td>
      <td><%= image_tag post.photo_url,:size => "150x150" %></td>
      <td><%= post.titles %></td>
      <td><%= post.caption %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>
