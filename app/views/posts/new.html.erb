


<div class="col-md-6 text-center">

	<div class="card rounded align-items-stretch">
		<div class="card-header"><h3 class="mb-0">ADD POST</h3></div>
		<div class="card-body">
  <div class="form-group">


			<%= form_for :post, url: posts_path do |f| %>
				<p>
					<%= f.label :title %>
					<%= f.text_field(:title, {:class => 'form-control'}) %>
				</p>

				<p>
					<%= f.label :author_name %>
					<%= f.text_field(:author_name, {:class => 'form-control'}) %>
				</p>



				<p>
					<%= f.label :img_url %>
					<%= f.url_field(:img_url, {:class => 'form-control'}) %>
				</p>

				<p>
					<%= f.label :caption %>
					<%= f.text_area(:caption, {:class => 'form-control'}) %>
				</p>

				<p>
					<%= f.submit({:class => 'btn btn-outline-success'}) %>
				</p>
			<% end %>

			<button class="btn btn-outline-danger text-upper" id="btn-test">test button</button>


		</div>
	</div>
</div>