<div class="container">
    <div class="row">
        <h1 class="headings">Edit Post</h1>
    </div>
    <div class="row">
        <%= form_for :post, url: post_path(@post), method: :patch do |form| %>

        <div class="form-group">
            <%= form.label :author %><br>
            <%= form.text_field :author %>
        </div>

        <div class="form-group">
            <%= form.label :photo_url %><br>
            <%= form.text_area :photo_url %>
        </div>

        <div class="form-group">
            <%= form.label :date_taken %><br>
            <%= form.text_area :date_taken %>
        </div>

        <div class="form-group">
            <%= form.submit %>
        </div>

        <% end %>
        </div>
        <div class="row">
            <%= link_to 'Back', posts_path %>
        </div>
    </div>
</div>