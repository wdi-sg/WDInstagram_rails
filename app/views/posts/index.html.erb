<h1>Listing posts</h1>

<button><a href="/?sort=date&order=dec">Sort by Date - Newest first</a></button>
<button><a href="/?sort=title&order=dec">Sort by Title</a></button>



<table>
  <tr>
    <th>Title</th>
    <th>Caption</th>
    <th>Author</th>
    <th>Image</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.caption %></td>
      <td><%= post.author_name %></td>
      <td><%= post.photo_url %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>



<%= link_to 'New post', new_post_path %>