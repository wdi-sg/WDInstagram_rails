<%= form_with scope: :post, model: @post, local: true do |form| %>

	<div>
		<h3>Photo Url</h3>
		<%= form.text_field :photo_url %>
	</div>

	<div>
		<h3>Caption</h3>
		<%= form.text_field :caption %>
	</div>

	<div>
		<h3>Author</h3>
		<%= form.text_field :author %>
	</div>

	<div>
		<h3>Date Taken (yyyy/mm/dd)</h3>
		<%= form.text_field :date_taken %>
	</div>

	<div>
		<%= form.submit %>
	</div>

<% end %>

<%= link_to 'Back', post_path(@post) %>
<%= link_to 'Home', posts_path %>