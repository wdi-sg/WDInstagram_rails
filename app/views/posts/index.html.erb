<h1>Posts</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Photo</th>
    <th>Caption</th>
    <th>Author</th>
    <th>Created at:</th>
    <th>Updated at:</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td> <%= image_tag("#{post.photo_url}", :style => "height:100px; width:100px" ) %></td>
      <td><%= post.caption %></td>
      <td><%= post.author_name %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>

    </tr>
  <% end %>
</table>
<%= link_to 'New post', new_post_path %>