
<h1> New Video </h1>
<%= form_with scope: :video, url: videos_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field(:title, {:class =>'form-control'}) %>
  </p>

  <p>
    <%= form.label :author_name, 'Author' %><br>
    <%= form.text_area(:author_name, {:class =>'form-control'} )%>
  </p>
  <p>
    <%= form.label :video_url, 'Video link' %><br>
   <%= form.text_area(:video_url, {:class =>'form-control'}) %> 
  </p>
   <p>
    <%= form.label :caption %><br>
   <%= form.text_area(:caption, {:class =>'form-control'}) %> 
  </p>
  <p>
    <%= form.submit :class => 'btn btn-primary' %>
  </p>
<% end %>
