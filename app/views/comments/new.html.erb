<h1>Comment</h1>
<%= form_with scope: :comment, url: article_comments_path, local: true do |form| %>
<!-- When model is specified, scope and url not required as it will be inferred by rails -->

	<p>
		<%= form.label :Comment %><br>
		<%= form.text_field :content %>
	</p>

	<p>
		<%= form.hidden_field :article_id, value: @article.id %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>

<%= link_to 'Back', articles_path %>