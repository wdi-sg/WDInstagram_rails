<h1>Edit Post</h1>

<%= form_with scope: :post, model: @post, local: true do |form| %>

    <p>
    <%= form.label :Author_name %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :Photo_url %><br>
    <%= form.text_area :photo_url %>
  </p>
  <p>
    <%= form.label :Title %><br>
    <%= form.text_field :title %>
  </p>
   <p>
    <%= form.label :Caption %><br>
    <%= form.text_field :caption %>
  </p>
  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', root_path %>