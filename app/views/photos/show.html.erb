<%= image_tag @photo.url, style:'height: 300px;' %>

<p>
  <strong>Author:</strong>
  <%= @photo.author %>
</p>

<p>
  <strong>Date:</strong>
  <%= @photo.date %>
</p>

<p>
  <strong>Comments:</strong>
  <%= @photo.comments %>
</p>

<p>
<%= link_to 'Back', photos_path %>
</p>
<p>
<%= link_to 'Edit', edit_photo_path(@photo) %>
</p>
<p>
<%= link_to 'Destroy', photo_path(@photo),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
