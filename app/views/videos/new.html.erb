<h1>Add a new Video</h1>

<%= form_with scope: :video, url: videos_path, local: true do |form| %>
   <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :author_name %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
  	<h4>Add a video URL</h4>
    <%= form.label :video_url, 'Video_URL' %><br>
  	<%= form.text_area :video_url, :value => "www.youtube.com/embed/....", :cols => 60, :rows => 1%>
    <br>




  </p>

  <p>
    <%= form.label :caption %><br>
    <%= form.text_area :caption, :cols => 70, :rows => 10%>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', root_path %>