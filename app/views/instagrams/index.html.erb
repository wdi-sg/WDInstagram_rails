<h1>Listing instagram</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author Name</th>
    <th>Img Url</th>
    <th></th>
  </tr>

  <% @instagrams.each do |instagram| %>
    <tr>
      <td><%= instagram.title %></td>
      <td><%= instagram.author_name %></td>
      <td><%= instagram.photo_url %></td>
      <td><%= link_to 'Show', show_instagram_path(instagram) %></td>
      <td><%= link_to 'Edit', edit_instagram_path(instagram) %></td>
      <td><%= link_to 'Destroy', delete_instagram_path(instagram),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New instagram', new_instagrams_path %>