<h1>Welcome to WDInstagram!</h1>
<h3>Here's your feed:</h3>
<%= link_to 'New post', new_post_path %>
<table>
  <tr>
    <th>Username</th>
    <th>Caption</th>
    <th>Photo</th>
    <th>Options</th>
    <th>Created At:</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.username %></td>
      <td><%= post.title %></td>
      <td>
        <img src= <%= post.photo_url %> height = "100" width = "100" /></td>
      <td><%= link_to 'Show', post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post_path(post),
        method: :delete,
        data: { confirm: 'You sure bro?' } %>
      </td>
      <td><%= post.created_at %></td>
    </tr>
  <% end %>
</table>
