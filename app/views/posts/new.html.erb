<%= form_with scope: :post, url: posts_path, local: true do |form| %>

    <p>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :photo_url %>
        <%= form.text_field :photo_url %>
    </p>

    <p>
        <%= form.label :caption %>
        <%= form.text_area :caption %>
    </p>

    <p>
        <%= form.label :author_name %>
        <%= form.text_field :author_name %>
    </p>

    <p>
        <%= form.submit %>
    </p>

<% end %>

<%= link_to 'Back', root_path %>