<%= form_with scope: :post, url: posts_path, local: true do |form| %>
  <p>
    <%= form.label :author_name %><br>
    <%= form.text_field :author_name %>
  </p>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

    <p>
    <%= form.label :photo_url %><br>
    <%= form.text_field :photo_url %>
  </p>

  <p>
    <%= form.label :video_url %><br>
    <%= form.text_field :video_url %>
  </p>

   <p>
    <%= form.label :caption %><br>
    <%= form.text_area :caption %>
  </p>

    <p>
    <%= form.label :tweet %><br>
    <%= form.text_field :tweet %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>