<h1>Create New Post</h1>

<%= form_with scope: :post, url: posts_path, local: true do |form| %>
    <p>
      <%= form.label :Author %><br>
      <%= form.text_field :author_name %>
    </p>
  
    <p>
      <%= form.label :Photo %><br>
      <%= form.url_field :photo_url %>
    </p>

    <p>
      <%= form.label :Title %><br>
      <%= form.text_area :title %>
    </p>
  
    <p>
      <%= form.submit %>
    </p>
<% end %>
  
<%= link_to 'Back', root_path %>