<p>
  <strong>Author:</strong>
  <%= @post.author_name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <%= image_tag(@post.photo_url, width: "300") %>
</p>

<p>
  <%= @post.caption %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Destroy', post_path(@post),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', root_path %>