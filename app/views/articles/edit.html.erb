<h1>Edit Posts</h1>

<%= form_with scope: :article, model: @article, local: true do |form| %>

	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :post %><br>
		<%= form.text_area :post %>
	</p>

	<p>
		<%= form.label :author %><br>
		<%= form.text_area :author %>
	</p>

	<p>
		<%= form.label :photo_url %><br>
		<%= form.text_area :photo_url %>
	</p>

	<p>
		<%= form.label :date_taken %><br>
		<%= form.text_area :date_taken %>
	</p>

	<p>
		<%= form.submit "Edit" %>
	</p>

<% end %>

<%= link_to 'Back', articles_path %>